<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    <main>
        <h1>Blog Posts</h1>
        <a href="/posts/new" class="btn">Create New Post</a>
        <div class="posts">
            <% if (posts.length > 0) { %>
                <% posts.forEach(function(post) { %>
                    <div class="post">
                        <h2><%= post.title %></h2>
                        <p><%= post.content %></p>
                        <a href="/posts/edit/<%= post.id %>" class="btn">Edit</a>
                        <form action="/posts/delete/<%= post.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn">Delete</button>
                        </form>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No posts available. Create your first post!</p>
            <% } %>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>